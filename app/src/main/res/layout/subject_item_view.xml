<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/six_dp"
    app:cardCornerRadius="@dimen/six_dp"
    android:clickable="true"
    android:layout_margin="@dimen/six_dp"
    android:foreground="?android:selectableItemBackgroundBorderless"
    android:id="@+id/subject_grid_parent_cv"
    android:layout_height="@dimen/card_height"
    android:focusable="true">

    <LinearLayout
        android:padding="@dimen/card_padding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/profile_icon"
            android:id="@+id/subject_iv"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="@string/subject_image_view" />
        <RatingBar
            android:rating="3.0"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="false"
            android:layout_marginTop="@dimen/six_dp"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:id="@+id/subject_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true" />
    </LinearLayout>

</android.support.v7.widget.CardView>